<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434"
    android:fitsSystemWindows="true"
    tools:context=".AddMajor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbar_v_am_headerBG"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:background="#663AB6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/tv_v_am_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="Add Major"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tbar_v_am_headerBG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tbar_v_am_headerBG"
        tools:layout_editor_absoluteX="80dp" />

    <TextView
        android:id="@+id/lbl_majorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:fontFamily="monospace"
        android:text="Major Name:"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbar_v_am_headerBG" />

    <TextView
        android:id="@+id/lbl_majorPrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="38dp"
        android:fontFamily="monospace"
        android:text="Major Prefix:"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_majorName" />

    <TextView
        android:id="@+id/tv_v_am_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="monospace"
        android:text="Error: Please fill out all fields."
        android:textColor="#FF5050"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_am_addMajor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_v_am_majorName"
        android:layout_width="272dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:background="#2A2A2A"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="text"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:text="Computer Science"
        android:textColor="#D2D2D2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_majorName"
        app:layout_constraintTop_toBottomOf="@+id/tbar_v_am_headerBG" />

    <EditText
        android:id="@+id/et_v_am_majorPrefix"
        android:layout_width="240dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="14dp"
        android:background="#2A2A2A"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="text"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:text="CIS"
        android:textColor="#D2D2D2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_majorPrefix"
        app:layout_constraintTop_toBottomOf="@+id/et_v_am_majorName" />

    <Button
        android:id="@+id/btn_v_am_addMajor"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="665dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#663AB6"
        android:fontFamily="monospace"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_am_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_am_cancel" />

    <Button
        android:id="@+id/btn_v_am_cancel"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#663AB6"
        android:fontFamily="monospace"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_am_addMajor" />

</androidx.constraintlayout.widget.ConstraintLayout>