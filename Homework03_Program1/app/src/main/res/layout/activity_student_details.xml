<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434"
    android:fitsSystemWindows="true"
    tools:context=".StudentDetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbar_v_sd_headerBG"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:background="#663AB6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/tv_v_sd_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Student Details"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tbar_v_sd_headerBG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tbar_v_sd_headerBG" />

    <TextView
        android:id="@+id/lbl_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:fontFamily="monospace"
        android:text="First Name:"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbar_v_sd_headerBG" />

    <TextView
        android:id="@+id/lbl_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="38dp"
        android:fontFamily="monospace"
        android:text="Last Name:"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_firstName" />

    <TextView
        android:id="@+id/lbl_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="38dp"
        android:fontFamily="monospace"
        android:text="Username:"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_lastName" />

    <TextView
        android:id="@+id/lbl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="38dp"
        android:fontFamily="monospace"
        android:text="Email:"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_username" />

    <TextView
        android:id="@+id/lbl_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="38dp"
        android:fontFamily="monospace"
        android:text="Age:"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_email" />

    <TextView
        android:id="@+id/lbl_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="monospace"
        android:text="GPA:"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/et_v_sd_gpa"
        app:layout_constraintTop_toBottomOf="@+id/et_v_sd_email" />

    <TextView
        android:id="@+id/lbl_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="36dp"
        android:fontFamily="monospace"
        android:text="Major:"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_v_sd_age" />

    <TextView
        android:id="@+id/tv_v_sd_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="monospace"
        android:text="Error: Please fill out all fields."
        android:textColor="#FF5050"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_sd_editStudent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_v_sd_fname"
        android:layout_width="272dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:background="#2A2A2A"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="monospace"
        android:inputType="text"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:textColor="#D2D2D2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_firstName"
        app:layout_constraintTop_toBottomOf="@+id/tbar_v_sd_headerBG" />

    <EditText
        android:id="@+id/et_v_sd_lname"
        android:layout_width="272dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="14dp"
        android:background="#2A2A2A"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="text"
        android:enabled="false"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:textColor="#D2D2D2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_lastName"
        app:layout_constraintTop_toBottomOf="@+id/et_v_sd_fname" />

    <EditText
        android:id="@+id/et_v_sd_username"
        android:layout_width="272dp"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="14dp"
        android:background="#2A2A2A"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="text"
        android:enabled="false"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:textColor="#D2D2D2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_username"
        app:layout_constraintTop_toBottomOf="@+id/et_v_sd_lname" />

    <EditText
        android:id="@+id/et_v_sd_email"
        android:layout_width="317dp"
        android:layout_height="24dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="14dp"
        android:background="#2A2A2A"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textEmailAddress"
        android:enabled="false"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:textColor="#D2D2D2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_email"
        app:layout_constraintTop_toBottomOf="@+id/et_v_sd_username" />

    <EditText
        android:id="@+id/et_v_sd_age"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="14dp"
        android:background="#2A2A2A"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="number"
        android:enabled="false"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:textColor="#D2D2D2"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/lbl_gpa"
        app:layout_constraintStart_toEndOf="@+id/lbl_age"
        app:layout_constraintTop_toBottomOf="@+id/et_v_sd_email" />

    <EditText
        android:id="@+id/et_v_sd_gpa"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:background="#2A2A2A"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:textColor="#D2D2D2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_v_sd_email" />

    <Spinner
        android:id="@+id/sp_v_sd_major"
        android:layout_width="317dp"
        android:layout_height="24dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="14dp"
        android:background="#2A2A2A"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_major"
        app:layout_constraintTop_toBottomOf="@+id/et_v_sd_age" />

    <Button
        android:id="@+id/btn_v_sd_editStudent"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#663AB6"
        android:fontFamily="monospace"
        android:text="Edit Student"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_sd_backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_sd_major" />

    <Button
        android:id="@+id/btn_v_sd_backButton"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#663AB6"
        android:fontFamily="monospace"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_sd_editStudent" />

    <Button
        android:id="@+id/btn_v_sd_save"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#663AB6"
        android:fontFamily="monospace"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_sd_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_sd_major" />

    <Button
        android:id="@+id/btn_v_sd_cancel"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#663AB6"
        android:fontFamily="monospace"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_sd_save" />
    
</androidx.constraintlayout.widget.ConstraintLayout>